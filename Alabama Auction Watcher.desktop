[Desktop Entry]
Version=1.0
Type=Application
Name=Alabama Auction Watcher
Comment=Professional Real Estate Investment Tool - One-click launch with automatic configuration
GenericName=Real Estate Investment Tool
Exec=/bin/bash -c "cd '%k' && python3 launchers/cross_platform/smart_launcher.py"
Icon=accessories-text-editor
Terminal=false
Categories=Office;Finance;Development;
Keywords=real estate;auction;investment;property;alabama;
StartupNotify=true
StartupWMClass=Alabama Auction Watcher
MimeType=application/x-alabama-auction-watcher;

# Professional branding
X-GNOME-FullName=Alabama Auction Watcher - Professional Desktop Edition
X-GNOME-Bugzilla-Bugzilla=Alabama Auction Watcher
X-GNOME-Bugzilla-Product=Alabama Auction Watcher
X-GNOME-Bugzilla-Component=general
X-GNOME-Bugzilla-Version=1.0
X-GNOME-UsesNotifications=true

# Additional metadata
X-AppInstall-Package=alabama-auction-watcher
X-Ubuntu-Touch=true
X-GNOME-SingleWindow=false

# Launch script for proper directory handling
[Desktop Action LaunchSmartLauncher]
Name=Launch Smart Launcher
Exec=/bin/bash -c "cd \"%k\" && python3 launchers/cross_platform/smart_launcher.py"

[Desktop Action LaunchFullStack]
Name=Quick Full Stack Launch
Exec=/bin/bash -c "cd \"%k\" && python3 -c \"import sys; sys.path.append('launchers/cross_platform'); from smart_launcher import ServiceOrchestrator; from pathlib import Path; orch = ServiceOrchestrator(Path.cwd(), print); orch.launch_full_stack()\""

Actions=LaunchSmartLauncher;LaunchFullStack;