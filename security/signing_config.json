{
  "certificates": {
    "windows": {
      "code_signing_cert": "",
      "timestamp_server": "http://timestamp.digicert.com",
      "cert_password": "",
      "store_location": "CurrentUser",
      "cert_thumbprint": "",
      "backup_cert_path": "",
      "cert_expiry_warning_days": 30
    },
    "macos": {
      "developer_id_application": "Developer ID Application: Your Name (TEAM_ID)",
      "developer_id_installer": "Developer ID Installer: Your Name (TEAM_ID)",
      "apple_id_email": "",
      "app_specific_password": "",
      "team_id": "",
      "keychain": "login",
      "entitlements_file": "entitlements.plist"
    },
    "linux": {
      "gpg_key_id": "",
      "gpg_passphrase": "",
      "signing_key_path": "",
      "public_key_path": "",
      "key_server": "keyserver.ubuntu.com",
      "gpg_home": ""
    }
  },
  "security_settings": {
    "verify_before_signing": true,
    "require_secure_timestamp": true,
    "hash_algorithm": "SHA256",
    "minimum_key_size": 2048,
    "certificate_validation": true,
    "enforce_code_integrity": true,
    "require_hardened_runtime": true
  },
  "enterprise_settings": {
    "require_approval": false,
    "approval_email": "",
    "audit_logging": true,
    "backup_certificates": true,
    "certificate_monitoring": true,
    "compliance_reporting": true,
    "revocation_checking": true
  },
  "signing_policies": {
    "windows": {
      "allowed_extensions": [".exe", ".msi", ".dll", ".cab", ".ocx"],
      "required_attributes": ["ProductName", "CompanyName", "FileVersion"],
      "timestamp_required": true,
      "dual_signing": false
    },
    "macos": {
      "allowed_extensions": [".app", ".pkg", ".dmg", ".kext"],
      "hardened_runtime": true,
      "notarization_required": true,
      "entitlements_required": false
    },
    "linux": {
      "allowed_extensions": [".deb", ".rpm", ".appimage"],
      "gpg_required": true,
      "repository_signing": true,
      "source_package_signing": false
    }
  },
  "notification_settings": {
    "email_notifications": false,
    "slack_webhook": "",
    "certificate_expiry_alerts": true,
    "signing_failure_alerts": true,
    "security_incident_alerts": true
  },
  "backup_settings": {
    "backup_certificates": true,
    "backup_location": "./backups/certificates",
    "encrypted_backup": true,
    "backup_retention_days": 365,
    "offsite_backup": false
  }
}