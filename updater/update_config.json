{
  "update_server": "https://updates.alabamaauctionwatcher.com",
  "check_interval_hours": 24,
  "auto_update": false,
  "beta_channel": false,
  "backup_count": 3,
  "enterprise_mode": false,
  "allowed_update_window": {
    "start_hour": 2,
    "end_hour": 6,
    "timezone": "local"
  },
  "notification_preferences": {
    "show_desktop_notifications": true,
    "email_notifications": false,
    "admin_email": "",
    "webhook_url": ""
  },
  "download_preferences": {
    "max_concurrent_downloads": 1,
    "retry_attempts": 3,
    "timeout_seconds": 300,
    "bandwidth_limit_mbps": 0
  },
  "security_settings": {
    "verify_signatures": true,
    "allow_downgrades": false,
    "require_admin_approval": false,
    "trusted_certificates": []
  },
  "platform_specific": {
    "windows": {
      "installer_type": "msi",
      "silent_install": true,
      "create_desktop_shortcut": true,
      "add_to_path": false
    },
    "macos": {
      "installer_type": "pkg",
      "require_admin": true,
      "restart_required": false
    },
    "linux": {
      "package_manager": "auto",
      "distribution": "auto",
      "update_repositories": true
    }
  },
  "rollback_settings": {
    "enable_rollback": true,
    "automatic_rollback_on_failure": true,
    "rollback_timeout_minutes": 15,
    "health_check_url": "http://localhost:8501/health"
  },
  "logging": {
    "log_level": "INFO",
    "max_log_size_mb": 10,
    "keep_log_days": 30,
    "log_to_syslog": false
  }
}