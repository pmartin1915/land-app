# Alabama Auction Watcher - Environment Configuration Example
# Copy this file to .env.local and update with your actual values
# For production deployments, see .env.production.example

# =============================================================================
# ENVIRONMENT MODE (REQUIRED)
# =============================================================================

# Set to "production" to enable strict security checks
# In production mode, missing required secrets will cause startup failure
ENVIRONMENT=development

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================

# Primary API key for backend authentication
# Generate using: python -c "import secrets; print(f'AW_prod_{secrets.token_urlsafe(32)}')"
AUCTION_WATCHER_API_KEY=AW_prod_YOUR_SECURE_API_KEY_HERE

# API base URL (adjust for production deployment)
AUCTION_WATCHER_API_URL=http://localhost:8001/api/v1

# API timeout in seconds
API_TIMEOUT=30

# =============================================================================
# AUTHENTICATION (REQUIRED FOR PRODUCTION)
# =============================================================================

# JWT secret key for token signing
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=

# API key secret for device authentication
API_KEY_SECRET=

# Admin credentials (required in production mode)
# Generate password hash: python -c "from passlib.context import CryptContext; pwd=CryptContext(schemes=['bcrypt']); print(pwd.hash('your_password'))"
ADMIN_USERNAME=
ADMIN_PASSWORD_HASH=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Maximum request size in MB
MAX_REQUEST_SIZE_MB=10

# Enable CORS (true/false)
ENABLE_CORS=true

# CORS allowed origins (comma-separated)
# Leave empty for development defaults (localhost)
CORS_ORIGINS=

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Use secure cookies (true for HTTPS, false for development)
SECURE_COOKIES=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL for production (PostgreSQL recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/auction_watcher

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development API key (for testing only)
# DEV_API_KEY=AW_dev_testing_key_do_not_use_in_production

# Debug mode (true/false)
# DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email configuration for notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true

# =============================================================================
# SECURITY NOTICES
# =============================================================================

# NEVER commit .env.local to version control
# Add .env.local to your .gitignore file
# Rotate API keys regularly for security
# Use strong, unique passwords for all services
# Enable two-factor authentication where possible