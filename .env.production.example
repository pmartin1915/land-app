# Alabama Auction Watcher - Production Environment Template
# Copy this file to .env and fill in the values before deploying

# Environment Mode
# CRITICAL: Set to "production" in production to enable security checks
ENVIRONMENT=production

# Database Configuration
# Use PostgreSQL for production - SQLite is development only
DATABASE_URL=postgresql://username:password@localhost:5432/alabama_auction

# Authentication
# Generate a secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=<generate-secure-key-here>
API_KEY_SECRET=<generate-secure-key-here>

# Admin Credentials
# Generate password hash: python -c "from passlib.context import CryptContext; pwd=CryptContext(schemes=['bcrypt']); print(pwd.hash('your_secure_password'))"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=<bcrypt-hash-of-password>

# API Key for Streamlit frontend
# Generate: python -c "import secrets; print(f'AW_prod_{secrets.token_urlsafe(32)}')"
AUCTION_WATCHER_API_KEY=<generate-api-key-here>

# CORS Origins (comma-separated)
# Add your production domain(s) here
CORS_ORIGINS=https://alabamaauctionwatcher.com,https://www.alabamaauctionwatcher.com

# API Configuration
API_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE_MB=10

# Session Security
SESSION_TIMEOUT_MINUTES=60
SECURE_COOKIES=true

# Logging (optional - for external log aggregation)
# LOG_LEVEL=INFO
# SENTRY_DSN=<your-sentry-dsn>
